# Environment variables for production
NODE_ENV=production
PORT=3000
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# File upload settings
MAX_FILE_SIZE_MB=100
CLEANUP_INTERVAL_HOURS=1
MAX_FILE_AGE_HOURS=1

# Security settings
HELMET_CSP_ENABLED=true
CORS_CREDENTIALS=true

# Google Cloud Storage settings
GCS_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=your-bucket-name

# Use one of the following authentication methods:
# 1. Path to service account key file
GCS_KEY_FILE=/path/to/service-account-key.json

# 2. OR service account credentials as JSON string (for environments like Render)
# GCS_CREDENTIALS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}


# DOCKERHUB_TOKEN & DOCKERHUB_USERNAME in the secret of GitHub Actions Secrets